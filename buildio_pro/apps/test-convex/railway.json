{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "cd ../../packages/vehicle-management-convex && npx convex deploy --cmd 'cd ../../apps/test-convex && turbo run build' --cmd-url-env-var-name NEXT_PUBLIC_CONVEX_URL"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "pnpm --filter=test-convex start",
    "preDeployCommand": [
      "pnpm --filter=vehicle-management-convex dev"
    ],
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}