{
  "name": "buildio_pro_monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo dev --filter=web",
    "dev:expense-tracker": "turbo dev --filter=expense-tracker",
    "dev:poker-planner": "turbo dev --filter=poker-planner",
    "dev:housie-game": "turbo dev --filter=housie-game",
    "build:web": "turbo build --filter=web",
    "build:poker-planner": "turbo build --filter=poker-planner",
    "build:housie-game": "turbo build --filter=housie-game",
    "start:web": "pnpm --filter=web start",
    "start:poker-planner": "pnpm --filter=poker-planner start",
    "start:housie-game": "pnpm --filter=housie-game start"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  }
}