{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:expense-tracker": "turbo dev --filter=expense-tracker",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:web": "turbo build --filter=web",
    "build:starter-template": "turbo build --filter=starter-template",
    "build:expense-tracker": "turbo build --filter=expense-tracker",
    "start:web": "pnpm --filter=web start",
    "start:expense-tracker": "pnpm --filter=expense-tracker start",
    "start:starter-template": "pnpm --filter=starter-template start"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}